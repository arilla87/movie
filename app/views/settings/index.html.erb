<%if !flash[:success].blank?%>
<div class="row">
	<div class="col-sm-12 col-md-6 col-md-offset-3" style="padding:25px 0">
		<%= render partial: "shared/flash_messages", flash: flash %>    </div>
	</div>
	<%end%>
	<div class="wrapper">
		<%= render "shared/header" %>
		<div class="row rowPrincipal">
			<h3>Benvingut <%= current_user.email%></h3>
		</div>

		<div class="row rowPrincipal">
			<h4>Account settings</h4>
		</div>
		<div class="col-sm-6">
			<table class="table table-bordered">
				<tr>
					<th>Id</th>
					<th>Email</th>
					<th>Current sign in At</th>
					<th>Sign in count</th>
					<th>Created At</th>
				</tr>
				<tr>
					<td><%= current_user.id%></td>
					<td><%= current_user.email%></td>
					<td><%= current_user.current_sign_in_at%></td>
					<td><%= current_user.sign_in_count%></td>
					<td><%= current_user.created_at%></td>
				</tr>
			</table>
		</div>
		<div class="row">
    <div class="col-xs-6">
      <button type="button" class="btn btn-info btn-block btn-lg" data-toggle="collapse" data-target="#country"><span class="glyphicon glyphicon-globe"></span>&nbsp;&nbsp;Country</button>
      <div id="country" class="collapse in">
        <div class="well text-center">
          <%= @setting.country %>
        </div>
      </div>
    </div>
    <div class="col-xs-6">
      <button type="button" class="btn btn-info btn-block btn-lg" data-toggle="collapse" data-target="#lang"><span class="glyphicon glyphicon-info-sign"></span>&nbsp;&nbsp;Language</button>
      <div id="lang" class="collapse in">
        <div class="well text-center">
          <%= @setting.language %>
        </div>
      </div>
    </div>
  </div>
  <%= link_to "Editar", edit_setting_path(@setting), :nom => "Editar", :class => 'btn btn-warning btn-block btn-lg', style:"color: white;" %>
	</div>
	<%= render "shared/footer" %>
	<%= link_to "Sobre nosotros", about_path %>
	<%=link_to "Login", new_user_session_path %>
	<%=link_to "Sign up", new_user_registration_path %>

