<%if !flash[:danger].blank?%>
<div class="row">
    <div class="col-sm-12 col-md-6 col-md-offset-3" style="padding:25px 0">
<%= render partial: "shared/flash_messages", flash: flash %>    </div>
</div>
<%end%>



<%= form_for(@setting) do |f| %>
 
    	<div class="field">
        	<%= f.text_field :country, placeholder: "Country", class:"form-control" %>
    	</div>
    	<div class="field">
        	<%= f.text_field :language, placeholder: "Language", class:"form-control" %>
    	</div>    
    	 
    	<div class="field">
        	<%= f.submit "Guardar", class:"btn btn-sm btn-danger white pull-right", style:"margin-top: 15px;" %>
    	</div>
	<% end %>



